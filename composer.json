{
    "name": "mms/laravel-organizations",
    "type": "library",
    "description": "Provides a way of unifying administrative entities in a domain model",
    "keywords": [
        "MMS",
        "organization",
        "hierarchical data"
    ],
    "homepage": "https://github.com/MMSEducation/laravel-organizations",
    "license": "MIT",
    "authors": [
        {
            "name": "Saidou GUEYE",
            "email": "sgueye@mmseducation.com",
            "homepage": "",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "mms/laravel-eloquent-form-bridge": "dev-master",
        "prezent/grid": "0.9.*"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Mms\\Organizations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mms\\Organizations\\Tests": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "master"
        }
    },
    "config": {
        "sort-packages": true
    }
}
